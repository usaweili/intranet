= form_tag export_project_report_time_sheets_path, method: 'GET', class: 'form form-inline' do
  .form-horizontal
    .div.form-position
      .row.row-padding
        %label.col-md-3 From Date:
        %input{ name: 'from_date', 'aria-label': 'From Date', class: 'col-md-3 export-report-text-from-date form-control date-picker', type: 'date', placeholder: 'From Date', value: @from_date}
      .row.row-padding
        %label To Date:
        %input{ name: 'to_date', 'aria-label': 'To Date', class: 'form-control export-report-text-to-date date-picker', type: 'date', placeholder: 'From Date', value: @to_date}
      .row.row-padding
        = check_box_tag(:summary)
        = label_tag :summary, "Get summary report of all projects"
      .row.row-padding.projects_dropdown
        = "------------------------------  OR  --------------------------------"
        %br
        %br
        %label Project
        = select_tag :project_id, options_for_select(Project.get_approved_project_between_range(@from_date, @to_date)), class: 'export-report-text-to-select', 'aria-label': 'Project'

      = submit_tag "Download Report", class: "btn btn-primary btn-padding"
