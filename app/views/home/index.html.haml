- if @projects.present? && current_user.present?
  .active-projects
    %table.table
      = render partial: 'users/project', collection: @projects

  /= render partial: 'bonusly_updates', object: @bonusly_updates
.bonusly-updates.blog
  - @blog.each do |blog|
    %br
    %br
    .project-name
      = link_to blog.title, blog.url
      %br
      = blog.published
      = "- #{blog.author}"
      %br
    = raw blog.summary
